<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#7DF800"
                android:endColor="#6BC800" />
            <stroke
                android:width="2dp"
                android:color="#7DF800" />
            <corners android:radius="28dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#F8F9FA" />
            <stroke
                android:width="3dp"
                android:color="#7DF800" />
            <corners android:radius="28dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FFFFFF"
                android:endColor="#F8F9FA" />
            <stroke
                android:width="2dp"
                android:color="#7DF800" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</selector>
