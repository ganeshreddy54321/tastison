<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_profile_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/edit_profile_back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/lgreen"/>

        <ImageView
            android:id="@+id/edit_profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/profile_icon"
            android:contentDescription="Profile Icon" /> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name / Alias"
        android:textColor="@color/lgreen"
        android:layout_marginTop="24dp"/>
        <EditText
            android:id="@+id/edit_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dreamer"
            android:backgroundTint="@color/lgreen"
            android:textColor="@color/text_primary"
            android:inputType="textPersonName"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Greeting"
        android:textColor="@color/lgreen"
        android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_profile_voice_greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hi, itâ€™s me!"
            android:backgroundTint="@color/lgreen"
            android:textColor="@color/text_primary"
            android:inputType="text"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textColor="@color/lgreen"
        android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_profile_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write something..."
            android:backgroundTint="@color/lgreen"
            android:textColor="@color/text_primary"
            android:inputType="textMultiLine"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reflection Tagline"
        android:textColor="@color/lgreen"
        android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/edit_profile_reflection_tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Just breathe"
            android:backgroundTint="@color/lgreen"
            android:textColor="@color/text_primary"
            android:inputType="text"/> <Button
        android:id="@+id/save_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Save"
        android:backgroundTint="@color/lgreen"
        android:textColor="@android:color/white"/> </LinearLayout>
</ScrollView>