<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/security_privacy_root"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Material Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_color"
        android:title="@string/security_settings_title"
        android:titleTextColor="@color/lgreen"
        app:navigationIcon="@drawable/back_button" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title already in toolbar -->

            <!-- Authentication Section -->
            <TextView
                android:text="@string/section_authentication"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lgreen"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Password / PIN Lock -->
            <LinearLayout
                android:id="@+id/pin_lock_row"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/password_pin_lock"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="@string/password_pin_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Biometric Lock -->
            <LinearLayout
                android:id="@+id/biometric_lock_row"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/biometric_lock"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="@string/biometric_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Intruder Selfie -->
            <TextView
                android:text="@string/intruder_selfie"
                android:layout_marginTop="12dp"
                android:textColor="@color/text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Privacy Section -->
            <TextView
                android:text="@string/section_privacy"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lgreen"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Change Icon / Name -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/change_icon_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/app_icon_name_placeholder"
                    android:textColor="@color/lgreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Set Fake Password -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/set_fake_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="@string/set_fake_password"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Enable Self Destruct -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/enable_self_destruct"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:layout_height="wrap_content" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="@string/self_destruct_warning"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- No Data Collection -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/no_data_collection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary"
                    android:layout_height="wrap_content" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="@string/no_data_message"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Save Button -->
            <Button
                android:text="@string/save_settings"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/lgreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
