<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_marginTop="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@drawable/back_button"
            android:contentDescription="@string/back_button_description"
            android:clickable="true"  android:focusable="true"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settings_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/profile_icon_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_icon"
        android:contentDescription="@string/profile_icon_description" />

        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/user_name"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_profile_button"
            android:layout_width="154dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/Green"
            android:minHeight="48dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/edit_profile_button"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/night_mode_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_night_mode"
                        android:padding="12dp"
                        android:src="@drawable/nigth_mode"
                        android:contentDescription="@string/night_mode_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/night_mode_icon"
                        android:text="@string/night_mode_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/night_mode_switch"
                        android:layout_marginEnd="10dp" />
                    <FrameLayout
                        android:id="@+id/night_mode_switch_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/night_mode_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:switchMinWidth="50dp"
                            android:theme="@style/nightModeSwitch"
                            android:minHeight="48dp"
                            android:contentDescription="@string/night_mode_switch_description"
                            app:trackTint="@color/white" />
                    </FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/notification_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_notifications"
                        android:padding="12dp"
                        android:src="@drawable/notification_icon"
                        android:contentDescription="@string/notification_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/notification_icon"
                        android:text="@string/notifications_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/notification_switch"
                        android:layout_marginEnd="10dp" />
                    <FrameLayout
                        android:id="@+id/notification_switch_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/notification_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:switchMinWidth="50dp"
                            android:theme="@style/notificationSwitch"
                            android:minHeight="48dp"
                            android:contentDescription="@string/notifications_switch_description"
                            app:trackTint="@color/white" />
                    </FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/voice_lock_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_private_account"
                        android:padding="12dp"
                        android:src="@drawable/voice_lock"
                        android:contentDescription="@string/voice_lock_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/voice_lock_icon"
                        android:text="@string/voice_lock_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/voice_lock_switch"
                        android:layout_marginEnd="10dp" />
                    <FrameLayout
                        android:id="@+id/voice_lock_switch_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/voice_lock_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:switchMinWidth="50dp"
                            android:theme="@style/privateAccountSwitch"
                            android:minHeight="48dp"
                            android:contentDescription="@string/voice_lock_switch_description"
                            app:trackTint="@color/white" />
                    </FrameLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/security_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_security"
                        android:padding="12dp"
                        android:src="@drawable/security_icon"
                        android:contentDescription="@string/security_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/security_icon"
                        android:text="@string/security_privacy_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/security_arrow"
                        android:layout_marginEnd="10dp" />
                    <ImageView
                        android:id="@+id/security_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/textSize_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_private_account"
                        android:padding="12dp"
                        android:src="@drawable/text_size_icon"
                        android:contentDescription="@string/text_size_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/textSize_icon"
                        android:text="@string/text_size_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/textSize_arrow"
                        android:layout_marginEnd="10dp" />
                    <ImageView
                        android:id="@+id/textSize_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/language_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_notifications"
                        android:padding="12dp"
                        android:src="@drawable/language_icon"
                        android:contentDescription="@string/language_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/language_icon"
                        android:text="@string/change_language_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/language_arrow"
                        android:layout_marginEnd="10dp" />
                    <ImageView
                        android:id="@+id/language_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/export_entries_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_private_account"
                        android:padding="12dp"
                        android:src="@drawable/export_entries_icon"
                        android:contentDescription="@string/export_entries_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/export_entries_icon"
                        android:text="@string/export_entries_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/export_entries_arrow"
                        android:layout_marginEnd="10dp" />
                    <ImageView
                        android:id="@+id/export_entries_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/send_a_msg_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="12dp"
                        android:src="@drawable/send_a_msg_icon"
                        android:contentDescription="@string/send_message_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/send_a_msg_icon"
                        android:text="@string/send_message_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/send_a_msg_arrow"
                        android:layout_marginEnd="10dp" />
                    <ImageView
                        android:id="@+id/send_a_msg_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/about_us_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_white_mode"
                        android:padding="12dp"
                        android:src="@drawable/about_us_icon"
                        android:contentDescription="@string/about_us_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/about_us_icon"
                        android:text="@string/about_us_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/about_us_arrow"
                        android:layout_marginEnd="10dp" />
                    <ImageView
                        android:id="@+id/about_us_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/logout_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_white_mode"
                        android:padding="12dp"
                        android:src="@drawable/logout"
                        android:contentDescription="@string/logout_icon_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/logout_icon"
                        android:text="@string/logout_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/logout_arrow"
                        android:layout_marginEnd="10dp" />
                    <ImageView
                        android:id="@+id/logout_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_icon"
                        android:contentDescription="@string/right_arrow_description" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>