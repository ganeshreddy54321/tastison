<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_root_layout"
    android:background="?android:colorBackground"
    android:padding="24dp"
    tools:context=".Settings2">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_button_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@drawable/back_button"
            android:contentDescription="@string/back_button_description"
            android:clickable="true"
            android:focusable="true"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settings_title"
            android:textColor="?android:textColorPrimary"
            android:textStyle="bold"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/profile_icon_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_icon"
        android:contentDescription="@string/profile_icon_description"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Dreamer"
        android:text="Dreamer"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="22sp"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/profile_icon_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_profile_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="About Me"
        android:textColor="?android:textColorSecondary"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="12sp"
        android:inputType="textMultiLine"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/edit_display_name"
        app:layout_constraintStart_toEndOf="@id/edit_display_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6" />
    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/edit_profile_button"
    android:layout_width="154dp"
    android:layout_height="48dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="@color/lgreen"
    android:minHeight="48dp"
    android:text="Edit Profile"
    android:textAllCaps="false"
    android:textColor="@android:color/white"
    app:layout_constraintTop_toBottomOf="@+id/edit_profile_bio" app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">
                <RelativeLayout
                    android:id="@+id/night_mode_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView android:id="@+id/night_mode_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_night_mode"
                        android:padding="12dp"
                        android:src="@drawable/nigth_mode"
                        android:contentDescription="@string/night_mode_icon_description" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/night_mode_icon"
                        android:text="@string/night_mode_text"
                        android:textColor="?android:textColorPrimary" android:textStyle="bold" android:layout_toStartOf="@+id/night_mode_switch" android:layout_marginEnd="10dp" />
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/night_mode_switch" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:switchMinWidth="48dp" android:theme="@style/nightModeSwitch" android:minHeight="48dp" android:contentDescription="@string/night_mode_switch_description" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/notification_row"
                    android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/notification_icon" android:layout_width="60dp" android:layout_height="60dp" android:background="@drawable/round_back_notifications" android:padding="12dp"
                        android:src="@drawable/notification_icon" android:contentDescription="@string/notification_icon_description" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/notification_icon" android:text="@string/notifications_text" android:textColor="?android:textColorPrimary" android:textStyle="bold" android:layout_toStartOf="@+id/notification_switch" android:layout_marginEnd="10dp" />
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/notification_switch" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:switchMinWidth="50dp" android:theme="@style/notificationSwitch" android:minHeight="48dp" android:contentDescription="@string/notifications_switch_description" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/voice_lock_row"
                    android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/voice_lock_icon" android:layout_width="60dp" android:layout_height="60dp" android:background="@drawable/round_back_private_account" android:padding="12dp" android:src="@drawable/voice_lock" android:contentDescription="@string/voice_lock_icon_description" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/voice_lock_icon" android:text="@string/voice_lock_text"
                        android:textColor="?android:textColorPrimary" android:textStyle="bold" android:layout_toStartOf="@+id/voice_lock_switch" android:layout_marginEnd="10dp" />
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/voice_lock_switch" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:switchMinWidth="50dp" android:theme="@style/privateAccountSwitch" android:minHeight="48dp" android:contentDescription="@string/voice_lock_switch_description" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:id="@+id/security_privacy_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/security_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_security"
                        android:contentDescription="@string/security_icon_description"
                        android:padding="12dp"
                        android:src="@drawable/security_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/security_arrow"
                        android:layout_toEndOf="@+id/security_icon"
                        android:text="@string/security_privacy_text"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/security_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description"
                        android:src="@drawable/right_arrow_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/text_size_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/textSize_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_private_account"
                        android:contentDescription="@string/text_size_icon_description"
                        android:padding="12dp"
                        android:src="@drawable/text_size_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/textSize_arrow"
                        android:layout_toEndOf="@+id/textSize_icon"
                        android:text="@string/text_size_text"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/textSize_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description"
                        android:src="@drawable/right_arrow_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/language_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/language_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_notifications"
                        android:contentDescription="@string/language_icon_description"
                        android:padding="12dp"
                        android:src="@drawable/language_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/language_arrow"
                        android:layout_toEndOf="@+id/language_icon"
                        android:text="@string/change_language_text"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/language_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/right_arrow_description"
                        android:src="@drawable/right_arrow_icon" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">
                <RelativeLayout
                    android:id="@+id/export_entries_row"
                    android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView android:id="@+id/export_entries_icon" android:layout_width="60dp" android:layout_height="60dp" android:background="@drawable/round_back_private_account" android:padding="12dp" android:src="@drawable/export_entries_icon" android:contentDescription="@string/export_entries_icon_description" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/export_entries_icon" android:text="@string/export_entries_text"
                        android:textColor="?android:textColorPrimary" android:textStyle="bold" android:layout_toStartOf="@+id/export_entries_arrow" android:layout_marginEnd="10dp" />
                    <ImageView android:id="@+id/export_entries_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/right_arrow_icon" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:contentDescription="@string/right_arrow_description" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/send_message_row"
                    android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView android:id="@+id/send_a_msg_icon" android:layout_width="60dp" android:layout_height="60dp" android:padding="12dp" android:src="@drawable/send_a_msg_icon" android:contentDescription="@string/send_message_icon_description" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/send_a_msg_icon" android:text="@string/send_message_text"
                        android:textColor="?android:textColorPrimary" android:textStyle="bold" android:layout_toStartOf="@+id/send_a_msg_arrow" android:layout_marginEnd="10dp" />
                    <ImageView android:id="@+id/send_a_msg_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/right_arrow_icon" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:contentDescription="@string/right_arrow_description" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/about_us_row"
                    android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView android:id="@+id/about_us_icon" android:layout_width="60dp" android:layout_height="60dp" android:background="@drawable/round_back_white_mode" android:padding="12dp" android:src="@drawable/about_us_icon" android:contentDescription="@string/about_us_icon_description" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/about_us_icon" android:text="@string/about_us_text"
                        android:textColor="?android:textColorPrimary" android:textStyle="bold" android:layout_toStartOf="@+id/about_us_arrow" android:layout_marginEnd="10dp" />
                    <ImageView android:id="@+id/about_us_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/right_arrow_icon" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:contentDescription="@string/right_arrow_description" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_whiite10_20"
                android:orientation="vertical"
                android:padding="15dp">
                <RelativeLayout
                    android:id="@+id/logout_row"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">
                    <ImageView android:id="@+id/logout_icon" android:layout_width="60dp" android:layout_height="60dp" android:background="@drawable/round_back_white_mode" android:padding="12dp" android:src="@drawable/logout" android:contentDescription="@string/logout_icon_description" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/logout_icon" android:text="@string/logout_text"
                        android:textColor="?android:textColorPrimary" android:textStyle="bold" android:layout_toStartOf="@+id/logout_arrow" android:layout_marginEnd="10dp" />
                    <ImageView android:id="@+id/logout_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@drawable/right_arrow_icon" android:contentDescription="@string/right_arrow_description" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>