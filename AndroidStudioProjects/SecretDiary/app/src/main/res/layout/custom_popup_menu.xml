<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customPopupMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_whiite10_20"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dark Mode Row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="Dark Mode"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp" />

                <FrameLayout
                    android:id="@+id/night_mode_switch_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/night_mode_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:switchMinWidth="50dp"
                        android:minHeight="48dp"
                        android:contentDescription="Dark Mode Switch"
                        app:trackTint="@color/white" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Voice Lock Row -->
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="Voice Lock"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp" />

                <FrameLayout
                    android:id="@+id/voice_lock_switch_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/voice_lock_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:switchMinWidth="50dp"
                        android:minHeight="48dp"
                        android:contentDescription="Voice Lock Switch"
                        app:trackTint="@color/white" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Logout Row -->
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/logoutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
