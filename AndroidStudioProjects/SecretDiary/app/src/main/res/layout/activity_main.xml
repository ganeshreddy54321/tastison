    <!-- Items container -->

    <!-- Bottom Continue button -->


    <TextView
        android:id="@+id/textView2"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="WhisperDiary"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/menuIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="63dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Menu"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="342dp"
        android:layout_height="58dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="What do you want"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Unlock your thoughts"
        android:textColor="#666666"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionText" />

    <LinearLayout
        android:id="@+id/itemsContainer"
        android:layout_width="303dp"
        android:layout_height="308dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/gridButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintVertical_bias="1.0">

        <!-- Daily reflections item -->

        <!-- Personal item -->

        <RelativeLayout
            android:id="@+id/itemDaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mainback"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemDailyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Daily reflections"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemDailyDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:text="Capture your moments"
                    android:textColor="#666666"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/itemDailyIcon"
                android:layout_width="48dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="Microphone icon"
                android:src="@android:drawable/ic_btn_speak_now"
                app:tint="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemPersonal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mainback"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemPersonalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Personal"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemPersonalDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:text="Secure your secrets"
                    android:textColor="#666666"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/itemPersonalIcon"
                android:layout_width="44dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="Lock icon"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#000000" />

        </RelativeLayout>

        <!-- Creative ideas item -->
        <RelativeLayout
            android:id="@+id/itemCreative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainback"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:outlineSpotShadowColor="@color/my_green"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:elevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemCreativeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Creative ideas"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemCreativeDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:text="Jot down inspirations"
                    android:textColor="#666666"
                    android:textSize="18dp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/itemCreativeIcon"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:contentDescription="Pencil icon"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/black" />

        </RelativeLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="371dp"
        android:layout_height="209dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="8dp"
        android:rowCount="2"

        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/gridButton1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/buttonback"
            android:backgroundTint="@color/my_green"
            android:fontFamily="sans-serif-medium"
            android:hapticFeedbackEnabled="true"
            android:text="Add new entry"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/gridButton2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/buttonback"
            android:backgroundTint="@color/my_green"
            android:fontFamily="sans-serif-medium"
            android:text="View entries"

            android:textColor="@color/black" />

        <Button
            android:id="@+id/gridButton3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:background="@drawable/buttonback"
            android:backgroundTint="@color/my_green"
            android:fontFamily="sans-serif-medium"
            android:text="Change voice password"
            android:textColor="@color/black"

            />

        <Button
            android:id="@+id/gridButton4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonback"
            android:backgroundTint="@color/my_green"
            android:fontFamily="sans-serif-medium"
            android:text="Settings"
            android:textColor="@color/black" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>