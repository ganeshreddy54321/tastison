        <activity android:name="com.example.settingspage.ExportEntriesActivity" android:exported="false" />
        <activity android:name="com.example.settingspage.SendMessageActivity" android:exported="false" />
        <activity android:name="com.example.settingspage.AboutUsActivity" android:exported="false" />
